{% extends 'base.html.twig' %}

{% block title %}Species{% endblock %}

{% block body %}
<div class="container">
    <h1>Espèce animale</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ species.id }}</td>
            </tr>
            <tr>
                <th>Espèces</th>
                <td>{{ species.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_species_index') }}">Retour à la liste</a>

    <a class="btn btn-warning" href="{{ path('app_species_edit', {'id': species.id}) }}">Mettre à jour</a>

    <p>{{ include('back/species/_delete_form.html.twig') }}</p>
 </div>   
{% endblock %}
