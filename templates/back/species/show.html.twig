{% extends 'base.html.twig' %}

{% block title %}Species{% endblock %}

{% block body %}
<div class="container">
    <h1>Espèce animale</h1>

    <table class="table" style="margin: 2rem 0 2rem">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ species.id }}</td>
            </tr>
            <tr>
                <th>Espèces</th>
                <td>{{ species.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="show_buttons">
    <a class="btn btn-warning_show" style="margin-left: 0.8rem" href="{{ path('app_species_edit', {'id': species.id}) }}">Mettre à jour</a>
    <p>{{ include('back/species/_delete_form.html.twig') }}</p>
    <a class="btn btn-secondary" href="{{ path('app_species_index') }}">Retour à la liste</a>

    </div>

 </div>   
{% endblock %}
