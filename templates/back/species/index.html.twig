{% extends 'base.html.twig' %}

{% block title %}Species index{% endblock %}

{% block body %}
<div class="container  w-25 ">

    <h1>Index des espèces</h1>

    <a class="btn btn-info ajouter" href="{{ path('app_species_new') }}"><i class="bi bi-plus-circle"></i> Ajouter</a>


    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Espèces</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for species in species %}
            <tr>
                <td>{{ species.id }}</td>
                <td>{{ species.name }}</td>
                <td align="right">
                    <a class="btn btn-sm btn-warning" href="{{ path('app_species_show', {'id': species.id}) }}"><i class="bi bi-zoom-in"></i></a>
                    <a class="btn btn-sm btn-success" href="{{ path('app_species_edit', {'id': species.id}) }}"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun résultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
