{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
    <h1>Animal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ animal.gender }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img class="img_backoffice" src="{{ animal.picture }}"></td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ animal.age }}</td>
            </tr>
            <tr>
                <th>Child_compatibility</th>
                <td>{{ animal.childCompatibility }}</td>
            </tr>
            <tr>
                <th>Other_animal_compatibility</th>
                <td>{{ animal.otherAnimalCompatibility }}</td>
            </tr>
            <tr>
                <th>Garden_needed</th>
                <td>{{ animal.gardenNeeded }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ animal.status }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ animal.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_animal_index') }}">back to list</a>

    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>

    {{ include('back/animal/_delete_form.html.twig') }}
{% endblock %}
