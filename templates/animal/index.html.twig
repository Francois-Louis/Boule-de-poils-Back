{% extends 'base.html.twig' %}

{% block title %}Animal index{% endblock %}

{% block body %}
    <h1>Animal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Picture</th>
                <th>Age</th>
                <th>Child_compatibility</th>
                <th>Other_animal_compatibility</th>
                <th>Garden_needed</th>
                <th>Status</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td>{{ animal.id }}</td>
                <td>{{ animal.name }}</td>
                <td>{{ animal.gender }}</td>
                <td>{{ animal.picture }}</td>
                <td>{{ animal.age }}</td>
                <td>{{ animal.childCompatibility }}</td>
                <td>{{ animal.otherAnimalCompatibility }}</td>
                <td>{{ animal.gardenNeeded }}</td>
                <td>{{ animal.status }}</td>
                <td>{{ animal.description }}</td>
                <td>
                    <a href="{{ path('app_animal_show', {'id': animal.id}) }}">show</a>
                    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_animal_new') }}">Create new</a>
{% endblock %}
